---
import { Image } from 'astro:assets'
import feat1Image from '../assets/images/key-features/feat-1.png'
import feat2Image from '../assets/images/key-features/feat-2.png'
import feat3Image from '../assets/images/key-features/feat-3.png'
import feat4Image from '../assets/images/key-features/feat-4.png'
import feat5Image from '../assets/images/key-features/feat-5.png'
import feat6Image from '../assets/images/key-features/feat-6.png'

const features = [
  {
    heading: 'Track all contributions in each round',
    subheading:
      'Get a breakdown of how many contributions were made in each charge cycle',
    image: feat1Image,
    headingClass: 'text-[--text-plum]',
    subheadingClass: 'text-[--text-light-plum] max-w-[38ch]',
    cardClass: 'bg-[--background-plum]'
  },
  {
    heading: 'Several contribution frequency options',
    subheading: 'Daily, weekly, monthly, quarterly, annually and whatever-ly.',

    image: feat6Image,
    headingClass: 'text-[--text-yellow]',
    subheadingClass: 'text-[--text-light-yellow] max-w-[26ch]',
    cardClass: 'bg-[--background-yellow]'
  },

  {
    heading: 'One click contributions',
    subheading: 'Contribute and opt out of bills without a hassle.',
    image: feat3Image,
    headingClass: 'text-[--text-teal]',
    subheadingClass: 'text-[--text-light-teal] max-w-[38ch]',
    cardClass: 'bg-[--background-teal]'
  },

  {
    heading: 'Quick glance of defaulting participants',
    subheading: 'See who has paid and who has not.',
    image: feat2Image,
    headingClass: 'text-[--text-crimson]',
    subheadingClass: 'text-[--text-light-crimson] max-w-[38ch]',
    cardClass: 'bg-[--background-crimson]'
  },
  {
    heading: 'Support for all the banks',
    subheading: 'Collect contributions in your own Nigerian bank account.',
    image: feat4Image,
    headingClass: 'text-[--text-brown] max-w-[20ch]',
    subheadingClass: 'text-[--text-light-brown] max-w-[30ch]',
    cardClass: 'bg-[--background-brown]'
  },
  {
    heading: 'Instant Notifications',
    subheading: 'Get alerts when you make contributions or get paid.',
    image: feat5Image,
    headingClass: 'text-[--text-indigo]',
    subheadingClass: 'text-[--text-light-indigo] max-w-[29ch]',
    cardClass: 'bg-[--background-indigo]'
  }
]
---

<section class='relative flex h-max w-full flex-col gap-16'>
  <div class='flex flex-col gap-8 px-6'>
    <h2
      class='relative mx-auto w-max max-w-[15ch] leading-[1.05] tracking-tighter'
    >
      Key features

      <svg
        width='43'
        height='43'
        viewBox='0 0 43 43'
        fill='none'
        xmlns='http://www.w3.org/2000/svg'
        class='pointer-events-none absolute -right-[2.5rem] -top-[1.25rem] select-none'
      >
        <path
          fill-rule='evenodd'
          clip-rule='evenodd'
          d='M3.678 13.573c1.406-3.694 2.3-7.614 3.14-11.418C6.994 1.335 6.49.513 5.684.38a1.477 1.477 0 0 0-1.767 1.094C3.108 5.163 2.254 8.966.904 12.486c-.292.75.09 1.62.855 1.929.765.308 1.627-.092 1.919-.842Z'
          fill='#EB725E'
        >
        </path><path
          fill-rule='evenodd'
          clip-rule='evenodd'
          d='M17.72 26.422c6.774-5.537 12.818-11.917 19.75-17.32.645-.48.762-1.425.258-2.067-.504-.643-1.437-.786-2.087-.248-6.95 5.402-13.011 11.78-19.805 17.316a1.533 1.533 0 0 0-.21 2.13c.524.585 1.457.729 2.093.19Z'
          fill='#846567'
        >
        </path><path
          fill-rule='evenodd'
          clip-rule='evenodd'
          d='m40.628 40.014-10.736-.432c-.816-.074-1.51.58-1.546 1.413-.034.832.607 1.487 1.424 1.56l10.752.434a1.525 1.525 0 0 0 1.542-1.472 1.48 1.48 0 0 0-1.436-1.503Z'
          fill='#2A5057'
        >
        </path>
      </svg>
    </h2>

    <p class='mx-auto max-w-[36ch] text-justify text-[--text-light]'>
      Bits and bobs that make Halver special
    </p>
  </div>

  <ul class='grid gap-8 px-6 sm:grid-cols-2'>
    {
      features.map(
        ({
          heading,
          headingClass,
          subheading,
          subheadingClass,
          cardClass,
          image
        }) => {
          return (
            <li
              class:list={[
                cardClass,
                'list-item-card flex flex-col justify-between gap-10 rounded-lg p-6'
              ]}
            >
              <div class='flex flex-col gap-2'>
                <p
                  class:list={[
                    'list-item-heading max-w-[17ch] font-semibold leading-tight',
                    headingClass
                  ]}
                >
                  {heading}
                </p>
                <p
                  class:list={[
                    'list-item-subheading leading-tight',
                    subheadingClass
                  ]}
                >
                  {subheading}
                </p>
              </div>

              <div class='ml-auto max-[711px]:max-w-[300px] min-[500px]:max-w-[300px]'>
                <Image
                  class='ml-auto opacity-90 sm:max-w-full'
                  src={image}
                  alt={heading}
                />
              </div>
            </li>
          )
        }
      )
    }
  </ul>
</section>

<style>
  h2 {
    font-size: var(--size-step-3);
  }

  p,
  small {
    text-wrap: balance;
  }

  .list-item-card {
    box-shadow: var(--shadow-elevation-low);
  }

  .list-item-heading {
    font-size: var(--size-step-0);
  }

  .list-item-subheading {
    font-size: var(--size-step--1);
  }
</style>
